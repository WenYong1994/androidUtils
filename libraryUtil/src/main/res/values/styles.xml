<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/ui_shadow_left</item>
        <item name="shadow_right">@drawable/ui_shadow_right</item>
        <item name="shadow_bottom">@drawable/ui_shadow_bottom</item>
    </style>

    <style name="normal_dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="normal_dialog.corner">
        <item name="android:windowBackground">@drawable/ui_white_corner_bg</item>
    </style>

    <style name="text_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">@dimen/txt_normal_content</item>
        <item name="android:lines">1</item>
        <item name="android:drawablePadding">@dimen/spacing_four</item>
        <item name="android:paddingTop">@dimen/spacing_four</item>
        <item name="android:paddingBottom">@dimen/spacing_four</item>
    </style>

    <style name="edit_text">
        <item name="android:textColorHint">@color/black_hint</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black_normal</item>
        <item name="android:textSize">@dimen/txt_big_content</item>
        <item name="android:padding">@dimen/spacing_four</item>
    </style>
</resources>